startup_message off
vbell off
term screen-256color
autodetach on
hardstatus string "screen (%n: %t)"
caption string "%{= kw}%Y-%m-%d;%c %{= kw}%-Lw%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+Lw%1`"
caption always
defshell bash
backtick 1 5 5 true
screen -t shell 0 bash
screen -t root 0 sudo -i
screen -t vim 1 vim
screen -t htop 2 htop
screen -t logs 3 journalctl -af
select 0
